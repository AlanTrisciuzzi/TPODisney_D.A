<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_degradado"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="124dp"
        android:layout_height="79dp"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/castillodisneylogo_removebg_preview" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="126dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/disney_wordmark_svg" />

    <androidx.cardview.widget.CardView
        android:layout_width="309dp"
        android:layout_height="568dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="632dp"
        app:cardBackgroundColor="@color/colordetalle"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPersonaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:background="@color/backgroundText"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtTvshows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"

                android:text="TextView" />

            <TextView
                android:id="@+id/txtShortFilms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtVideogames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtParkAttractions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtAllies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtEnemies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/white"
                android:background="@color/backgroundText"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imgfav"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="125dp"
                android:layout_marginVertical="40dp"

                app:srcCompat="@drawable/corazon_vacio" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgFavoritos"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_131257" />

    <ImageView
        android:id="@+id/imgFavoritos"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgHome"
        app:srcCompat="@drawable/corazon_lleno" />

</androidx.constraintlayout.widget.ConstraintLayout>